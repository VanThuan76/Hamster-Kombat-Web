{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../../apps/docs/app/shared/*"],
      "@server/*": ["../../apps/docs/app/server/*"],
      "@ui/*": ["../../packages/ui/src/*"],
      "@ui/components/*": ["../../packages/ui/src/components/ui/*"],
      "@ui/components/ui/*": ["../../packages/ui/src/components/ui/*"]
    }
  }
}